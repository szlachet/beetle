<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="BeetleSecurityPU" transaction-type="JTA">
        <provider>org.hibernate.ogm.jpa.HibernateOgmPersistence</provider>

        <properties>
            <property name="hibernate.transaction.jta.platform"
                                  value="org.hibernate.service.jta.platform.internal.JBossAppServerJtaPlatform" />
            <property name="jboss.as.jpa.providerModule" value="org.hibernate.ogm:5.0"/>
            <property name="hibernate.ogm.datastore.provider" value="neo4j_embedded" />
            <property name="hibernate.ogm.datastore.database" value="beetle-security.graphdb" />
            <property name="hibernate.ogm.neo4j.database_path" value="d:\db\neo4j\data\db\beetle-security.graphdb" />
        </properties>
    </persistence-unit>
</persistence>
